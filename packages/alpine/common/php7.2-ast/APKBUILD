# Maintainer: Hexosse <hexosse@gmail.com>

pkgname=php7.2-ast
pkgver=1.0.5
pkgrel=0
_pkgreal=ast
_phpver=7.2
_php=php$_phpver

pkgdesc="PHP $_phpver ast - abstract syntax tree"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="BSD-3-Clause"

depends="$_php-common"
makedepends="$_php-dev autoconf re2c"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/$_pkgreal-$pkgver"
_libdir="/usr/lib/php/$_phpver"
_extension_dir="$_libdir/modules"
_config_dir="/etc/php/$_phpver/conf.d"

prepare() {
    default_prepare
}

build() {
    replaces="php-ast php${_phpver:0:1}-ast"

    cd "$builddir"

    phpize$_phpver

	EXTENSION_DIR=$_extension_dir \
    ./configure \
        --prefix=/usr \
		--libdir=$_libdir \
        --with-php-config=/usr/bin/php-config$_phpver

  local jobs=$(($(nproc)+1))
  make -j$jobs
}

check() {
    cd "$builddir"

    local allow_fail='yes'

    NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
	cd "$builddir"

	make INSTALL_ROOT="$pkgdir" install
	install -d "$pkgdir/$_config_dir"
	echo "extension=$_pkgreal.so" > "$pkgdir/$_config_dir"/03_$_pkgreal.ini
}

sha512sums="7f56816553894849b539233209c57df9f9239ddc8a172c924a1f72c57ba474228e6f82779787a40ed1d78cac890dcd3d49bbb1aa2f7d4c29b95ae9809c836141  ast-1.0.5.tgz"
