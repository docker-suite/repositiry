pkgname=php7.4-meminfo
pkgver=1.0.6
pkgrel=0
_pkgreal=meminfo
_phpver=7.4
_php=php$_phpver

pkgdesc="NO VERSIONS COMPATIBLE WITH PHP 7.4: PHP extension to get insight about memory usage"
url="https://github.com/BitOne/php-meminfo"
arch="all"
license="MIT"

depends="$_php-common"
makedepends="$_php-dev"
# source="$_pkgreal-$pkgver.tar.gz::https://github.com/BitOne/php-meminfo/archive/v$pkgver.tar.gz"
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/php-$_pkgreal-$pkgver"
_libdir="/usr/lib/php/$_phpver"
_extension_dir="$_libdir/modules"
_config_dir="/etc/php/$_phpver/conf.d"

prepare() {
    default_prepare
}

