# Maintainer: Hexosse <hexosse@gmail.com>

pkgname=php7.1-phpunit
pkgver=1.0.0
pkgrel=0
_phpver=7.1
_php=php$_phpver

pkgdesc="The PHP Unit Testing framework"
url="https://phpunit.de/"
arch="noarch"
license="BSD 3 Clause"

depends="phpunit $_php $_php-phar $_php-json $_php-mbstring $_php-openssl $_php-dom $_php-xml"
makedepends=""
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
install_if="phpunit"

package() {
  mkdir -p "$pkgdir"
}
