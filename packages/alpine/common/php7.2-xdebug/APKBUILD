# Maintainer: Hexosse <hexosse@gmail.com>

pkgname=php7.2-xdebug
pkgver=2.9.0
pkgrel=0
_pkgreal=xdebug
_phpver=7.2
_php=php$_phpver

pkgdesc="Provides functions for function traces and profiling"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="The Xdebug license"

depends="$_php-common"
makedepends="$_php-dev"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/$_pkgreal-$pkgver"
_libdir="/usr/lib/php/$_phpver"
_extension_dir="$_libdir/modules"
_config_dir="/etc/php/$_phpver/conf.d"

prepare() {
    default_prepare
}

build() {
    replaces="php-xdebug php${_phpver:0:1}-xdebug"

    cd "$builddir"

    phpize$_phpver

	EXTENSION_DIR=$_extension_dir \
    ./configure \
        --prefix=/usr \
		--libdir=$_libdir \
        --with-php-config=/usr/bin/php-config$_phpver \
        --enable-xdebug

    local jobs=$(($(nproc)+1))
    make -j$jobs
}

check() {
    cd "$builddir"

    local allow_fail='yes'

    NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
	cd "$builddir"

	make INSTALL_ROOT="$pkgdir" install
	install -d "$pkgdir/$_config_dir"
	echo "extension=$_pkgreal.so" > "$pkgdir/$_config_dir"/03_$_pkgreal.ini
}

sha512sums="51f87f55ee5a654c587344d1442b0e6cb74a8bfb138d3ba793a17580851595c97e1d961ce25a473e461ac61d1c8a1634412e6f4e3975116dc0ffc52aa3355d0e  xdebug-2.9.0.tgz"
