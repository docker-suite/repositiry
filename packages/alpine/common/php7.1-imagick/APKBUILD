# Maintainer: Hexosse <hexosse@gmail.com>

pkgname=php7.1-imagick
pkgver=3.4.4
pkgrel=0
_pkgreal=imagick
_phpver=7.1
_php=php$_phpver

pkgdesc="Provides a wrapper to the ImageMagick library"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3.01"

depends="$_php-common"
makedepends="$_php-dev imagemagick-dev libtool"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/$_pkgreal-$pkgver"
_libdir="/usr/lib/php/$_phpver"
_extension_dir="$_libdir/modules"
_config_dir="/etc/php/$_phpver/conf.d"

prepare() {
    default_prepare
}

build() {
    replaces="php-imagick php${_phpver:0:1}-imagick"

    cd "$builddir"

    phpize$_phpver

    # Apply stack smash protection to functions using local buffers and alloca()
    # Make PHP's main executable position-independent (improves ASLR security mechanism, and has no performance impact on x86_64)
    # Enable optimization (-O2)
    # Enable linker optimization (this sorts the hash buckets to improve cache locality, and is non-default)
    # Adds GNU HASH segments to generated executables (this is used if present, and is much faster than sysv hash; in this configuration, sysv hash is also generated)
    # https://github.com/docker-library/php/issues/272
    # -D_LARGEFILE_SOURCE and -D_FILE_OFFSET_BITS=64 (https://www.php.net/manual/en/intro.filesystem.php)

	EXTENSION_DIR=$_extension_dir \
    CFLAGS="-fstack-protector-strong -fpic -fpie -O2 -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64" \
    CPPFLAGS="$CFLAGS" \
    LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
    ./configure \
        --prefix=/usr \
		--libdir=$_libdir \
        --with-php-config=/usr/bin/php-config$_phpver

    local jobs=$(($(nproc)+1))
    make -j $jobs
}

check() {
    cd "$builddir"

    local allow_fail='yes'

    NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
	cd "$builddir"

	make INSTALL_ROOT="$pkgdir" install
	install -d "$pkgdir/$_config_dir"
	echo "extension=$_pkgreal.so" > "$pkgdir/$_config_dir"/03_$_pkgreal.ini
}

sha512sums="73145a1f095849c32760db2dfc4acc13c57d99a037d65eca9b0ddf8f8e81cf6d28a50f2614e44bae1d90b4f881a2e9a64926e0e3b9403e491fd903ffeb30c4b7  imagick-3.4.4.tgz"
