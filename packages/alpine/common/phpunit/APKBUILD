pkgname=phpunit
pkgver=7.5.18
pkgrel=0

pkgdesc="The PHP Unit Testing framework"
url="https://phpunit.de/"
arch="noarch"
license="BSD 3 Clause"

depends=""
makedepends=""
source="$pkgname-$pkgver.phar::https://phar.phpunit.de/$pkgname-$pkgver.phar"
srcdir="/tmp/$pkgname-$pkgver/src"
pkgbasedir="/tmp/$pkgname-$pkgver/pkg"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
install_if="php7.1-phpunit php7.2-phpunit php7.3-phpunit"

package() {
    install -m 0755 -D "$srcdir"/$pkgname-$pkgver.phar "$pkgdir"/usr/bin/$pkgname
}

