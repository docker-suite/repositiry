# Maintainer: Hexosse <hexosse@gmail.com>

pkgname=php7.2-sqlsrv
pkgver=5.6.1
pkgrel=0
_pkgreal=sqlsrv
_phpver=7.2
_php=php$_phpver

pkgdesc="sqlsrv-1.1 parser and emitter"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="MIT"

depends="$_php-common unixodbc"
makedepends="$_php-dev autoconf unixodbc-dev"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
srcdir="/tmp/$pkgname-$pkgver"
builddir="$srcdir/$_pkgreal-$pkgver"
_libdir="/usr/lib/php/$_phpver"
_extension_dir="$_libdir/modules"
_config_dir="/etc/php/$_phpver/conf.d"

prepare() {
    default_prepare
}

build() {
    replaces="php-sqlsrv php${_phpver:0:1}-sqlsrv"

    cd "$builddir"

    phpize

	EXTENSION_DIR=$_extension_dir \
    ./configure \
        --prefix=/usr \
		--libdir=$_libdir \
        --with-php-config=/usr/bin/php-config$_phpver \
        --enable-sqlsrv

    local jobs=$(($(nproc)+1))
    make -j$jobs
}

check() {
    cd "$builddir"

    local allow_fail='yes'

    NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
	cd "$builddir"

	make INSTALL_ROOT="$pkgdir" install
	install -d "$pkgdir/$_config_dir"
    printf "; priority=20\nextension=$_pkgreal.so\n" > "$pkgdir/$_config_dir"/03_$_pkgreal.ini
}

sha512sums="f2b63e4a486a5a34a69ef6f38937c8e66f06ba70aeca3fb848d295b533b8fa08abb450c6394d0478d6c2a22ce0b2410dbfe5f1b39b11e8c5d68a4cb04bf2c838  sqlsrv-5.6.1.tgz"
