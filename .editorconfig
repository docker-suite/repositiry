# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.patch]
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[{Makefile,*.make}]
indent_style = tab
indent_size = 4
